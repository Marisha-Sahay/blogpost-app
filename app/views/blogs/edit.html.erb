<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h1>New Blog Post</h1>
    
    <%= form_tag "/blogs/#{@blog.id}", method: :patch do%>
    <form class="form-horizontal">
      <div class="form-group">
        <%= label_tag :title%>
        <%= text_field_tag :title,@blog.title, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= label_tag :post%>
        <%= text_field_tag :post,@blog.post, class:"form-control"%>
      </div>

      <div class="form-group">
        <%= submit_tag "Update Post"%>
      </div>
    </form>
    <%end%>